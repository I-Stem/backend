{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
"esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true, 
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis":false,
    "outDir": "dist/",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "underscore": ["lodash"],
      "@lip/constants": ["src/constants"],
      "@lip/controllers": ["src/controllers"],
      "@lip/exceptions": ["src/exceptions"],
      "@lip/interfaces": ["src/interfaces"],
      "@lip/middlewares": ["src/middlewares"],
      "@lip/models": ["src/models"],
      "@lip/providers": ["src/providers"],
      "@lip/queues": ["src/queues"],
      "@lip/routes": ["src/routes"],
      "@lip/seed": ["src/seed"],
      "@lip/test": ["src/test"],
      "@lip/utils": ["src/utils"],
      "@lip/validators": ["src/validators"]
}
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/mongoose/index.d.ts",
    "./node_modules/@types/mongodb/index.d.ts",
    "./node_modules/@types/express/index.d.ts",
    "./node_modules/@types/dotenv/index.d.ts",
    "./node_modules/@types/express-session/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "typings/*",
    "node_modules",
    "**/*.test.ts",
     "**/*SetupTest.spec.ts", 
    "**/*.spec.ts",
    "test/*",
    ".babelrc"
  ]
}